include <stdio.h>
#include <stdlib.h>
#include <time.h>
int main()
{
 int n, lost= 0, win = 0;
printf("Enter the no of times you want to perform the experiment:");
    scanf("%d", &n);
    srand(time(NULL));
    for (int i = 0; i < n; i++)
    {
        int a= rand() % 3 + 1;
        int b = rand() % 3 + 1;

        if (b == a)
        {
             win++;
        }
        else
        {
            lost++;
        }
    }

    printf("Out of %d experiments, \n If you switch you will %d times , and not switching  you will win for %d times.\n", n, lost,win);

    return 0;
}


